{
    "$schema": "./manifest_schema.json",
    "manifest_version": 4,
    "type": "extension",
    "name": "文本转语音",
    "slug": "text_to_speech",
    "description": "基于TTS接口，将输入字符转为语音发送；同时支持直接发送音频文件。",
    "version": "0.7.3",
    "icon": "./icon.png",
    "authors": [
        {
            "name": "Mousher Lily",
            "link": "https://github.com/lclichen"
        }
    ],
    "dependencies": [
        "euphony"
    ],
    "platform": [
        "win32",
        "linux",
        "darwin"
    ],
    "injects": {
        "renderer": "./src/renderer.js",
        "main": "./src/main.js",
        "preload": "./src/preload.js"
    },
    "repository": {
        "repo": "lclichen/LiteLoaderQQNT-TTS",
        "branch": "main",
        "release": {
            "tag": "0.7.3"
        }
    }
}
